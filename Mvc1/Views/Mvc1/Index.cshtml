@using Mvc1.Models.Entity
@model PagedList.IPagedList<TBLKATEGORI>
@using PagedList
@using PagedList.Mvc
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layou2.cshtml";
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>KATEGORI ID</th>
            <th>KATEGORI AD</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
          
        </tr>
    </thead>
    <tbody>
        @foreach (var ktgr in Model)
        {
            <tr>
                <td>@ktgr.KATEGORIID</td>
                <td>@ktgr.KATEGORIAD</td>
                <td><a href="/Mvc1/SIL/@ktgr.KATEGORIID" class="btn btn-danger">SİL</a></td>
                <td><a href="/Mvc1/KategoriGetir/@ktgr.KATEGORIID" class="btn btn-success">GÜNCELLE</a></td>
               
            </tr>
        }
    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))
<a href="/Mvc1/YeniKategori/" class="btn btn-primary">YENİ KATEGORİ EKLE</a>
