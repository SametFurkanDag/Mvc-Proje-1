@model Mvc1.Models.Entity.TBLURUNLER
@{
    ViewBag.Title = "UrunEkle";
    Layout = "~/Views/Shared/_Layou2.cshtml";
}

<form method="post" class="form-group">
    <div>
        <label>Ürün Adı</label>
        <input type="text" class="form-control" name="URUNAD" required=""/>
    </div>
    <div>
        <label>Kategori Seçiniz</label>
        @Html.DropDownListFor(m =>m.TBLKATEGORI.KATEGORIID, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
    </div>
    <div>
        <label>Ürün Fiyatı</label>
        <input type="text" class="form-control" name="FIYAT" required="" />
    </div>
    <div>
        <label>Ürün Markası</label>
        <input type="text" class="form-control" name="MARKA" placeholder="Buraya Markayı Yazınız..."/>
    </div>
    <div>
        <label>Stok Adeti</label>
        <input type="text" class="form-control" name="STOK"required="" />
    </div>
    <div>
        <div style="margin-top:15px">
            <button class="btn btn-info">Ürün Ekle</button>
        </div>
</form>

